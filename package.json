{
  "name": "antzed-theme",
  "displayName": "AntZed",
  "description": "Warm, minimalist light & dark themes with enhanced contrast. Features bottom activity bar, hidden scrollbars, auto-hide minimap, and IBM Plex Sans UI font. Inspired by Anthropic's brand and Zed's clean design.",
  "version": "1.1.1",
  "publisher": "TeoVoss",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Themes"
  ],
  "qna": "marketplace",
  "keywords": [
    "theme",
    "light",
    "dark",
    "anthropic",
    "zed",
    "minimalist",
    "warm",
    "ibm plex"
  ],
  "contributes": {
    "themes": [
      {
        "label": "AntZed Light",
        "uiTheme": "vs",
        "path": "./themes/anthropic-light.json"
      },
      {
        "label": "AntZed Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/anthropic-dark.json"
      }
    ],
    "configurationDefaults": {
      "editor.fontFamily": "Lelix, Menlo, Monaco, 'Courier New', monospace",
      "editor.fontSize": 14,
      "debug.console.fontSize": 14,
      "terminal.integrated.fontSize": 14,
      "chat.editor.fontSize": 14,
      "chat.fontSize": 14,
      "scm.inputFontSize": 14,
      "markdown.preview.fontFamily": "IBM Plex Sans, -apple-system, BlinkMacSystemFont, 'Segoe UI', Arial, sans-serif",
      "markdown.preview.lineHeight": 1.75,
      "workbench.activityBar.location": "bottom",
      "workbench.statusBar.visible": false,
      "workbench.layoutControl.enabled": false,
      "window.commandCenter": false,
      "chat.commandCenter.enabled": false,
      "workbench.navigationControl.enabled": false,
      "editor.scrollbar.vertical": "hidden",
      "editor.scrollbar.verticalScrollbarSize": 1,
      "editor.minimap.autohide": true,
      "editor.minimap.renderCharacters": false,
      "editor.wordWrap": "wordWrapColumn",
      "workbench.editor.empty.hint": "hidden",
      "workbench.editor.pinnedTabSizing": "shrink",
      "workbench.editor.pinnedTabsOnSeparateRow": true,
      "workbench.iconTheme": "material-icon-theme"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/TeoVoss/antzed-theme"
  },
  "license": "MIT",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#faf9f5",
    "theme": "light"
  },
  "author": {
    "name": "TeoVoss"
  },
  "bugs": {
    "url": "https://github.com/TeoVoss/antzed-theme/issues"
  },
  "homepage": "https://github.com/TeoVoss/antzed-theme#readme"
}
